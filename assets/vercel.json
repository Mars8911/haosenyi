{
  "version": 2,
  "trailingSlash": false,

  "redirects": [
    { "source": "/:path+.html", "destination": "/:path+", "permanent": true }
  ],


  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    {
      "source": "/:path((?!.*\\.(?:css|js|png|jpg|jpeg|gif|svg|webp|ico|woff2?|map)).+)",
      "destination": "/:path.html"
    }
  ],


  "headers": [
    {
      "source": "/(.*)\\.(css|js|png|jpg|jpeg|gif|svg|webp|ico|woff2?|map)$",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
